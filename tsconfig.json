{
	"compilerOptions": {
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"baseUrl": ".",
		"outDir": "./dist",
		"sourceMap": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"target": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"removeComments": true,
		"paths": {
			"app-ui/*": ["src/*"],
			"components/*": ["src/components/*"],
			"lib/*": ["src/lib/*"],
			"ui-utils/*": ["src/utils/*"],
			"styles/*": ["src/styles/*"],
			"ui-types/*": ["src/types/*"],
			"redux-types/*": ["src/types/*"],
			"client/*": ["src/client/*"],
			"logic/*": ["src/logic/*"],
			"store/*": ["src/store/*"]
		}
	},
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true,
		"useTranspileModule": true,
		"doTypeCheck": true,
		"forkChecker": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
